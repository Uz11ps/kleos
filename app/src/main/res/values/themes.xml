<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kleos" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/kleos_blue</item>
        <item name="colorPrimaryVariant">@color/kleos_blue_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/kleos_blue</item>
        <item name="colorSecondaryVariant">@color/kleos_blue_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Background / surfaces -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <!-- Ripple / pressed state -->
        <item name="colorControlHighlight">@color/kleos_blue_ripple</item>
    </style>

    <style name="Theme.Kleos.NoActionBar" parent="Theme.Kleos">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Белая шапка с синим заголовком для экранов авторизации/регистрации -->
    <style name="Theme.Kleos.ActionBarLight" parent="Theme.Kleos">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/kleos_blue</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Kleos.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Kleos.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>