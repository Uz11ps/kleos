<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/onboarding_background"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- Размытый кружок внизу слева -->
    <com.example.kleos.ui.onboarding.BlurredCircleView
        android:id="@+id/blurredCircleBottom"
        android:layout_width="318dp"
        android:layout_height="318dp"
        android:layout_marginStart="-90dp"
        android:layout_marginBottom="-50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Размытый кружок вверху справа -->
    <com.example.kleos.ui.onboarding.BlurredCircleView
        android:id="@+id/blurredCircleTop"
        android:layout_width="318dp"
        android:layout_height="318dp"
        android:layout_marginEnd="-90dp"
        android:layout_marginTop="-50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Кнопка назад -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_menu_button"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Back"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Заголовок "Программа" -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Программа"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Подзаголовок "Название универа" -->
    <TextView
        android:id="@+id/universityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Название универа"
        android:textColor="#CBD5E1"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Карточка с информацией о программе -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/programCard"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_program_card"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/universityText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Язык -->
        <LinearLayout
            android:id="@+id/languageRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/languageIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_program_language"
                android:layout_marginEnd="12dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/languageText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="English"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical" />
        </LinearLayout>

        <!-- Разделитель 1 -->
        <View
            android:id="@+id/divider1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/divider_program_item"
            app:layout_constraintTop_toBottomOf="@id/languageRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Степень -->
        <LinearLayout
            android:id="@+id/levelRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            app:layout_constraintTop_toBottomOf="@id/divider1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/levelIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_program_degree"
                android:layout_marginEnd="12dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/levelText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Бакалавриат"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical" />
        </LinearLayout>

        <!-- Разделитель 2 -->
        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/divider_program_item"
            app:layout_constraintTop_toBottomOf="@id/levelRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Длительность -->
        <LinearLayout
            android:id="@+id/durationRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            app:layout_constraintTop_toBottomOf="@id/divider2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/durationIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_program_clock"
                android:layout_marginEnd="12dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/durationText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6 лет"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical" />
        </LinearLayout>

        <!-- Разделитель 3 -->
        <View
            android:id="@+id/divider3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/divider_program_item"
            app:layout_constraintTop_toBottomOf="@id/durationRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Стоимость -->
        <LinearLayout
            android:id="@+id/tuitionRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            app:layout_constraintTop_toBottomOf="@id/divider3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/tuitionIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_program_money"
                android:layout_marginEnd="12dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tuitionText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="от $5,000 / год"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Кнопка "Подать заявку" -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/applyButton"
        android:layout_width="312dp"
        android:layout_height="64dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:text="Подать заявку"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:backgroundTint="@android:color/white"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/programCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Текст под кнопкой -->
    <TextView
        android:id="@+id/timeNoteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Заполнение займёт ~5 минут"
        android:textColor="#CBD5E1"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/applyButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
