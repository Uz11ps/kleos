<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/onboarding_background"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- Размытый кружок в правом верхнем углу -->
    <com.kleos.education.ui.onboarding.BlurredCircleView
        android:id="@+id/blurredCircleTopRight"
        android:layout_width="318dp"
        android:layout_height="318dp"
        android:layout_marginEnd="-90dp"
        android:layout_marginTop="-50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Размытый кружок у левой части страницы (внизу слева) -->
    <com.kleos.education.ui.onboarding.BlurredCircleView
        android:id="@+id/blurredCircleBottomLeft"
        android:layout_width="318dp"
        android:layout_height="318dp"
        android:layout_marginStart="-90dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Размытый кружок в правом нижнем углу -->
    <com.kleos.education.ui.onboarding.BlurredCircleView
        android:id="@+id/blurredCircleBottomRight"
        android:layout_width="318dp"
        android:layout_height="318dp"
        android:layout_marginEnd="-90dp"
        android:layout_marginBottom="-50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Кнопка назад -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_menu_button"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Back"
        android:padding="12dp"
        android:tint="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Кнопка меню -->
    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_menu_button"
        android:src="@drawable/ic_menu_hamburger"
        android:contentDescription="Menu"
        android:padding="12dp"
        android:tint="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ScrollView для прокрутки контента -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backButton">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingBottom="20dp"
            android:gravity="center_horizontal">

            <!-- Заголовок -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:text="@string/filters_title"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="-0.02"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Поисковая строка -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/searchInputLayout"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_filter_input"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleText">

                <ImageView
                    android:id="@+id/searchIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search_program"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/searchEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/filter_search_program"
                    android:textColor="@android:color/white"
                    android:textColorHint="#CBD5E1"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:typeface="sans"
                    android:fontFamily="sans-serif"
                    android:singleLine="true"
                    android:inputType="text"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:imeOptions="actionSearch"
                    app:layout_constraintStart_toEndOf="@id/searchIcon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Фильтр: Язык -->
            <TextView
                android:id="@+id/languageLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="@string/filter_language"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/searchInputLayout" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/languageInputLayout"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_filter_input"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/languageLabel">

                <ImageView
                    android:id="@+id/languageIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_language_filter"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/languageEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/filter_language"
                    android:textColor="@android:color/white"
                    android:textColorHint="#CBD5E1"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:typeface="sans"
                    android:fontFamily="sans-serif"
                    android:singleLine="true"
                    android:inputType="none"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    app:layout_constraintStart_toEndOf="@id/languageIcon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Фильтр: Уровень обучения -->
            <TextView
                android:id="@+id/levelLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="@string/filter_education_level"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/languageInputLayout" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/levelInputLayout"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_filter_input"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/levelLabel">

                <ImageView
                    android:id="@+id/levelIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_education_level"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/levelEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/filter_education_level"
                    android:textColor="@android:color/white"
                    android:textColorHint="#CBD5E1"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:typeface="sans"
                    android:fontFamily="sans-serif"
                    android:singleLine="true"
                    android:inputType="none"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    app:layout_constraintStart_toEndOf="@id/levelIcon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Фильтр: Университет -->
            <TextView
                android:id="@+id/universityLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="@string/filter_university"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/levelInputLayout" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/universityInputLayout"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_filter_input"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/universityLabel">

                <ImageView
                    android:id="@+id/universityIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_university_filter"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/universityEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/filter_university"
                    android:textColor="@android:color/white"
                    android:textColorHint="#CBD5E1"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:typeface="sans"
                    android:fontFamily="sans-serif"
                    android:singleLine="true"
                    android:inputType="none"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    app:layout_constraintStart_toEndOf="@id/universityIcon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Кнопка Найти варианты -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/findButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="20dp"
                android:minHeight="56dp"
                android:backgroundTint="@android:color/white"
                android:text="@string/find_variants"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                app:cornerRadius="12dp"
                app:layout_constraintTop_toBottomOf="@id/universityInputLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>


