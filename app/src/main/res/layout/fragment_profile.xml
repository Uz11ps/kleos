<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- Размытый кружок внизу слева -->
    <com.example.kleos.ui.onboarding.BlurredCircleView
        android:id="@+id/blurredCircleBottom"
        android:layout_width="318dp"
        android:layout_height="318dp"
        android:layout_marginStart="-90dp"
        android:layout_marginBottom="-50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Размытый кружок вверху справа -->
    <com.example.kleos.ui.onboarding.BlurredCircleView
        android:id="@+id/blurredCircleTop"
        android:layout_width="318dp"
        android:layout_height="318dp"
        android:layout_marginEnd="-90dp"
        android:layout_marginTop="-50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Кнопка меню -->
    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_menu_button"
        android:src="@drawable/ic_menu_hamburger"
        android:contentDescription="Menu"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/menuButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/profile_name"
            app:hintTextColor="@color/dark_on_surface_variant"
            app:boxStrokeColor="@color/dark_outline">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_on_surface"
                android:textColorHint="@color/dark_on_surface_variant"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/profile_notes"
            app:hintTextColor="@color/dark_on_surface_variant"
            app:boxStrokeColor="@color/dark_outline">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/notesEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="2"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:textColor="@color/dark_on_surface"
                android:textColorHint="@color/dark_on_surface_variant"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/profile_payment"
            app:hintTextColor="@color/dark_on_surface_variant"
            app:boxStrokeColor="@color/dark_outline">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/paymentEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_on_surface"
                android:textColorHint="@color/dark_on_surface_variant"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/profile_penalties"
            app:hintTextColor="@color/dark_on_surface_variant"
            app:boxStrokeColor="@color/dark_outline">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/penaltiesEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_on_surface"
                android:textColorHint="@color/dark_on_surface_variant"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/profile_phone"
            app:hintTextColor="@color/dark_on_surface_variant"
            app:boxStrokeColor="@color/dark_outline">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phoneEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:textColor="@color/dark_on_surface"
                android:textColorHint="@color/dark_on_surface_variant"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/profile_course"
            app:hintTextColor="@color/dark_on_surface_variant"
            app:boxStrokeColor="@color/dark_outline">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/courseEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_on_surface"
                android:textColorHint="@color/dark_on_surface_variant"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/profile_speciality"
            app:hintTextColor="@color/dark_on_surface_variant"
            app:boxStrokeColor="@color/dark_outline">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/specialityEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_on_surface"
                android:textColorHint="@color/dark_on_surface_variant"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/profile_status"
            app:hintTextColor="@color/dark_on_surface_variant"
            app:boxStrokeColor="@color/dark_outline">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/statusEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_on_surface"
                android:textColorHint="@color/dark_on_surface_variant"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/profile_university"
            app:hintTextColor="@color/dark_on_surface_variant"
            app:boxStrokeColor="@color/dark_outline">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/universityEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_on_surface"
                android:textColorHint="@color/dark_on_surface_variant"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/profile_student_id"
            app:hintTextColor="@color/dark_on_surface_variant"
            app:boxStrokeColor="@color/dark_outline">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/studentIdEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:textColor="@color/dark_on_surface"
                android:textColorHint="@color/dark_on_surface_variant"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_logout"
            android:layout_marginTop="16dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>


