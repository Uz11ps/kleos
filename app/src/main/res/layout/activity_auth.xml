<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/onboarding_background"
    android:fitsSystemWindows="true"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- Кружок с блюром сверху за текстом -->
    <com.example.kleos.ui.onboarding.BlurredCircleView
        android:id="@+id/blurredCircleTop"
        android:layout_width="318dp"
        android:layout_height="318dp"
        android:layout_marginTop="-150dp"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Кружок с блюром снизу под кнопками -->
    <com.example.kleos.ui.onboarding.BlurredCircleView
        android:id="@+id/blurredCircle"
        android:layout_width="318dp"
        android:layout_height="318dp"
        android:layout_marginTop="-50dp"
        android:elevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/gradientShape"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginStart="-100dp"
        android:layout_marginTop="-100dp"
        android:scaleType="centerCrop"
        android:scaleX="-1.0"
        android:contentDescription="Gradient shape"
        android:src="@drawable/gradient_shape"
        android:adjustViewBounds="true"
        android:elevation="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Бургер-меню (должен быть поверх всего) -->
    <ImageView
        android:id="@+id/menuButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_menu_hamburger"
        android:contentDescription="Menu"
        android:tint="@android:color/white"
        android:clickable="true"
        android:focusable="true"
        android:elevation="10dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Общий контейнер для welcome screen (текст и кнопки) -->
    <LinearLayout
        android:id="@+id/welcomeContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:elevation="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <!-- Контейнер для welcome screen -->
        <LinearLayout
            android:id="@+id/welcomeContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="32dp">

            <!-- Заголовок "Добро пожаловать" -->
            <TextView
                android:id="@+id/welcomeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_title"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="4dp" />

            <!-- Подзаголовок -->
            <TextView
                android:id="@+id/welcomeSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/welcome_subtitle"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:gravity="center_horizontal" />

        </LinearLayout>

        <!-- Кнопки над заблюренным кружком -->
        <LinearLayout
            android:id="@+id/bottomBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/submitButton"
                style="@style/Widget.Kleos.Button.Rounded"
                android:layout_width="214dp"
                android:layout_height="62dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/action_login"
                android:textSize="24sp"
                android:textAllCaps="false"
                android:maxLines="1"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:textColor="@color/dark_background"
                android:backgroundTint="@android:color/white" />

            <Space
                android:layout_width="0dp"
                android:layout_height="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/toggleModeButton"
                style="@style/Widget.Kleos.Button.Outlined.Rounded"
                android:layout_width="214dp"
                android:layout_height="62dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/action_register"
                android:textSize="24sp"
                android:textAllCaps="false"
                android:maxLines="1"
                android:ellipsize="end"
                android:includeFontPadding="false"
                app:strokeColor="@android:color/white"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/guestLoginText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Или войдите как гость"
                android:textColor="#CBD5E1"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

    </LinearLayout>

    <!-- Контейнер для формы входа/регистрации (скрыт по умолчанию) -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linksRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:gravity="center_vertical">

            <!-- Большой заголовок -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Sign In"
                android:textAppearance="@style/TextAppearance.Kleos.Display"
                android:textColor="@color/dark_on_surface" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fullNameInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_full_name"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                app:boxBackgroundMode="none"
                app:endIconMode="clear_text"
                app:hintTextColor="@color/dark_on_surface_variant">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fullNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName|textCapWords"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:textColor="@color/dark_on_surface"
                    android:textColorHint="@color/dark_on_surface_variant" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/fullNameUnderline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_outline"
                android:visibility="gone" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_email"
                android:layout_marginTop="12dp"
                app:boxBackgroundMode="none"
                app:endIconMode="clear_text"
                app:hintTextColor="@color/dark_on_surface_variant">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:textColor="@color/dark_on_surface"
                    android:textColorHint="@color/dark_on_surface_variant" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_outline" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_password"
                android:layout_marginTop="12dp"
                app:boxBackgroundMode="none"
                app:endIconMode="password_toggle"
                app:hintTextColor="@color/dark_on_surface_variant">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:imeOptions="actionDone"
                    android:textColor="@color/dark_on_surface"
                    android:textColorHint="@color/dark_on_surface_variant" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_outline" />

            <!-- Forgot password -->
            <TextView
                android:id="@+id/forgotPasswordText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/forgot_password"
                android:textColor="@color/kleos_blue"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Ссылки над кнопками (скрыты на welcome screen) -->
    <LinearLayout
        android:id="@+id/linksRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/leftHintText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dont_have_account"
            android:textAppearance="@style/TextAppearance.Kleos.Body1"
            android:textColor="@color/dark_on_surface_variant"
            android:visibility="gone" />

        <TextView
            android:id="@+id/guestText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/continue_as_guest"
            android:textColor="@color/kleos_blue"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
