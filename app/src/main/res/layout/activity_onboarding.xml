<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/onboarding_background"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- Размытый кружок -->
    <com.example.kleos.ui.onboarding.BlurredCircleView
        android:id="@+id/blurredCircle"
        android:layout_width="318dp"
        android:layout_height="318dp"
        android:layout_marginStart="-90dp"
        android:layout_marginTop="454dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Градиентная форма (разноцветная линия) - PNG изображение -->
    <ImageView
        android:id="@+id/gradientShape"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="100dp"
        android:scaleType="fitEnd"
        android:scaleX="2.0"
        android:scaleY="2.0"
        android:contentDescription="Gradient shape"
        android:src="@drawable/gradient_shape"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textContainer"
        app:layout_constraintHeight_percent="0.55" />

    <!-- Контейнер для текста в левом нижнем углу -->
    <LinearLayout
        android:id="@+id/textContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="180dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/textLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Изучайте"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:layout_marginBottom="12dp"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/textLine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="программы и"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:layout_marginBottom="12dp"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/textLine3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="подавайте заявки"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:fontFamily="sans-serif" />

    </LinearLayout>

    <!-- Пунктирное кольцо вокруг кнопки (только четверть) -->
    <com.example.kleos.ui.onboarding.QuarterDashedRingView
        android:id="@+id/dashedRing"
        android:layout_width="132dp"
        android:layout_height="132dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Кнопка со стрелкой внизу по центру -->
    <ImageButton
        android:id="@+id/btnContinue"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/bg_onboarding_button"
        android:src="@drawable/ic_arrow_forward_new"
        android:contentDescription="Continue"
        android:scaleType="centerInside"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


