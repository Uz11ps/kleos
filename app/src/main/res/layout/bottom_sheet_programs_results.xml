<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet_results"
    android:paddingTop="16dp"
    android:paddingBottom="32dp"
    android:minHeight="400dp">

    <!-- Drag handle -->
    <View
        android:id="@+id/dragHandle"
        android:layout_width="63dp"
        android:layout_height="9dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_drag_handle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Summary text -->
    <TextView
        android:id="@+id/resultsSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:text="Найдено: 0 программ"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/dragHandle"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- RecyclerView для списка программ -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/programsRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        android:nestedScrollingEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/resultsSummary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_min="300dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

