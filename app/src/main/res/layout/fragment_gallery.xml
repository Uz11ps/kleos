<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/onboarding_background"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".ui.gallery.GalleryFragment">

    <!-- Размытый кружок внизу слева -->
    <com.example.kleos.ui.onboarding.BlurredCircleView
        android:id="@+id/blurredCircleBottom"
        android:layout_width="318dp"
        android:layout_height="318dp"
        android:layout_marginStart="-90dp"
        android:layout_marginBottom="-50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Размытый кружок вверху справа -->
    <com.example.kleos.ui.onboarding.BlurredCircleView
        android:id="@+id/blurredCircleTop"
        android:layout_width="318dp"
        android:layout_height="318dp"
        android:layout_marginEnd="-90dp"
        android:layout_marginTop="-50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Кнопка меню -->
    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_menu_button"
        android:src="@drawable/ic_menu_hamburger"
        android:contentDescription="Menu"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/galleryRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/menuButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_gallery"/>
</androidx.constraintlayout.widget.ConstraintLayout>