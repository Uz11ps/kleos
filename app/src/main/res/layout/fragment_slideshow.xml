<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.SlideshowFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filters_title"
            android:textAppearance="@style/TextAppearance.Kleos.Display"
            android:textColor="@color/dark_on_surface"
            android:paddingBottom="16dp"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Kleos.TextInputLayout.OutlinedBox.Modern"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:startIconDrawable="@android:drawable/ic_menu_search"
            app:startIconTint="@color/kleos_blue">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/filterQueryEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/dark_on_surface"
                android:textColorHint="@color/dark_on_surface_variant"
                android:textStyle="normal"
                android:typeface="sans"
                android:fontFamily="sans-serif"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Kleos.TextInputLayout.OutlinedBox.Modern"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/filter_language"
            app:startIconDrawable="@android:drawable/ic_menu_sort_by_size"
            app:startIconTint="@color/kleos_blue">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/filterLanguageEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/dark_on_surface"
                android:textColorHint="@color/dark_on_surface_variant"
                android:textStyle="normal"
                android:typeface="sans"
                android:fontFamily="sans-serif"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Kleos.TextInputLayout.OutlinedBox.Modern"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/filter_education_level"
            app:startIconDrawable="@android:drawable/ic_menu_sort_by_size"
            app:startIconTint="@color/kleos_blue">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/filterLevelEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/dark_on_surface"
                android:textColorHint="@color/dark_on_surface_variant"
                android:textStyle="normal"
                android:typeface="sans"
                android:fontFamily="sans-serif"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Kleos.TextInputLayout.OutlinedBox.Modern"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/filter_university"
            app:startIconDrawable="@android:drawable/ic_menu_mylocation"
            app:startIconTint="@color/kleos_blue">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/filterUniversityEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/dark_on_surface"
                android:textColorHint="@color/dark_on_surface_variant"
                android:textStyle="normal"
                android:typeface="sans"
                android:fontFamily="sans-serif"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/searchButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="@style/Widget.Kleos.Button.Rounded"
            android:backgroundTint="@color/kleos_blue"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Найти"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/programsRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            tools:listitem="@layout/item_university"/>
    </LinearLayout>
</ScrollView>